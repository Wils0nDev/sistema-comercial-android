<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.map_cliente">


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UI.map_cliente" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnUbicacion_client"
            style="@style/Widget.Design.FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="500dp"
            android:backgroundTint="@color/colorTrans"
            app:srcCompat="@drawable/ic_my_location" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnbusquedaDireccion"
            style="@style/Widget.Design.FloatingActionButton"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="630dp"
            android:backgroundTint="@color/colorTrans"
            app:srcCompat="@drawable/ic_location_searching" />

        <EditText
            android:id="@+id/busquedaDireccion"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="27dp"
            android:background="@color/colorCeleste"
            android:backgroundTint="@color/colorCeleste"
            android:ems="10"
            android:hint="       Ingrese una direcciÃ³n"
            android:inputType="textPersonName" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnGuardarDirec"
            style="@style/Widget.Design.FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="350dp"
            android:backgroundTint="@color/colorCeleste"
            app:srcCompat="@drawable/ic_save_direct" />

        <!--Button
            android:id="@+id/btnGuardarDirec"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="650dp"
            android:background="@color/colorCeleste"
            android:text="@string/btnGuardarDir" /-->


    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</RelativeLayout>